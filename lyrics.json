{
  "lyrics": [
    {
      "lyric": "天青色等烟雨，而我在等你",
      "song": "《青花瓷》 周杰伦"
    },
    {
      "lyric": "当我和世界不一样，那就让我不一样",
      "song": "《倔强》 五月天"
    },
    {
      "lyric": "如果你愿意一层一层一层地剥开我的心",
      "song": "《洋葱》 杨宗纬"
    },
    {
      "lyric": "我想就这样牵着你的手不放开",
      "song": "《晴天》 周杰伦"
    },
    {
      "lyric": "你是我的眼，带我领略四季的变换",
      "song": "《你是我的眼》 萧煌奇"
    },
    {
      "lyric": "爱很简单，只要你点头",
      "song": "《爱很简单》 陶喆"
    },
    {
      "lyric": "我知道你都知道，我爱你没保留",
      "song": "《告白气球》 周杰伦"
    },
    {
      "lyric": "我想就这样牵着你的手不放开",
      "song": "《晴天》周杰伦"
    },
    {
      "lyric": "当我和世界不一样，那就让我不一样",
      "song": "《倔强》五月天"
    },
    {
      "lyric": "原谅我这一生不羁放纵爱自由",
      "song": "《海阔天空》Beyond"
    },
    {
      "lyric": "也许我偶尔还是会想她，偶尔难免会惦记着她",
      "song": "《勇气》梁静茹"
    },
    {
      "lyric": "让我听见你心跳，让我看见你微笑",
      "song": "《稻香》周杰伦"
    },
    {
      "lyric": "天空中最亮的星，能否听得见",
      "song": "《夜空中最亮的星》逃跑计划"
    },
    {
      "lyric": "为什么明明相爱，却又不能够相爱",
      "song": "《爱如潮水》张信哲"
    },
    {
      "lyric": "十年之前，我不认识你，你不属于我",
      "song": "《十年》陈奕迅"
    },
    {
      "lyric": "谁能够划船不用桨，谁能够扬帆没有风向",
      "song": "《当》动力火车"
    },
    {
      "lyric": "我也不想这样，可现实总叫人感到悲伤",
      "song": "《小情歌》苏打绿"
    },
    {
      "lyric": "越过山丘，才发现无人等候",
      "song": "《山丘》李宗盛"
    },
    {
      "lyric": "终于明白，有些幸福不是我的",
      "song": "《我不难过》孙燕姿"
    },
    {
      "lyric": "如果你想要逃，我不追求你的依靠",
      "song": "《江南》林俊杰"
    },
    {
      "lyric": "你是我的眼，带我穿越拥挤的人潮",
      "song": "《你是我的眼》萧煌奇"
    },
    {
      "lyric": "一开始我只顾着看你，装作不经意心却飘过去",
      "song": "《宁夏》梁静茹"
    },
    {
      "lyric": "爱我的人和我爱的人，到底哪一个更值得被爱",
      "song": "《爱我的人和我爱的人》卢学睿"
    },
    {
      "lyric": "在雨下整夜，我的爱溢出就像雨水",
      "song": "《不能说的秘密》周杰伦"
    },
    {
      "lyric": "就算全世界都与我为敌，我也要坚持到底",
      "song": "《疯狂世界》五月天"
    },
    {
      "lyric": "想要问问你敢不敢，像你说过那样的爱我",
      "song": "《风中有朵雨做的云》孟庭苇"
    },
    {
      "lyric": "我会陪你去看流星雨，落在这地球上",
      "song": "《流星雨》F4"
    },
    {
      "lyric": "心像树叶干枯，再痛也不说苦",
      "song": "《好久不见》陈奕迅"
    },
    {
      "lyric": "没有谁能把你抢离我身旁",
      "song": "《爱很简单》陶喆"
    },
    {
      "lyric": "你说把爱渐渐放下会走更远",
      "song": "《安静》周杰伦"
    },
    {
      "lyric": "又回到最初的起点，记忆中你青涩的脸",
      "song": "《突然好想你》五月天"
    },
    {
      "lyric": "闭上眼睛就看不清，这双人床缺了你",
      "song": "《一眼万年》S.H.E"
    },
    {
      "lyric": "不怕千万人阻挡，只怕自己投降",
      "song": "《隐形的翅膀》张韶涵"
    },
    {
      "lyric": "当泪痕勾勒着遗憾，回忆夸饰着伤感",
      "song": "《红豆》王菲"
    },
    {
      "lyric": "说好一起到白头，你却偷偷换了车票",
      "song": "《暧昧》杨丞琳"
    },
    {
      "lyric": "看着天空，星星在闪烁，心中思念的人已走远",
      "song": "《唯一》王力宏"
    },
    {
      "lyric": "如果还有如果，我希望你陪我到最后",
      "song": "《最熟悉的陌生人》萧亚轩"
    },
    {
      "lyric": "你不是真正的快乐，你的笑只是你穿的保护色",
      "song": "《你不是真正的快乐》五月天"
    },
    {
      "lyric": "我愿变成童话里，你爱的那个天使",
      "song": "《童话》光良"
    },
    {
      "lyric": "终于做了这个决定，别人怎么说我不理",
      "song": "《忽然之间》莫文蔚"
    },
    {
      "lyric": "你存在，我深深的脑海里",
      "song": "《不分手的恋爱》汪苏泷"
    },
    {
      "lyric": "你说你有点难追，想让我知难而退",
      "song": "《简单爱》周杰伦"
    },
    {
      "lyric": "我想和你走过所有雨天，傻傻等待",
      "song": "《独家记忆》陈小春"
    },
    {
      "lyric": "在心碎边缘，让我拥抱你",
      "song": "《王妃》萧敬腾"
    },
    {
      "lyric": "再给我两分钟，让我把记忆结成冰",
      "song": "《背对背拥抱》林俊杰"
    },
    {
      "lyric": "彩虹的微笑，绚烂的美好",
      "song": "《彩虹的微笑》王心凌"
    },
    {
      "lyric": "童年的纸飞机，现在终于飞回我手里",
      "song": "《回到过去》周杰伦"
    },
    {
      "lyric": "就算失去一切也无所谓，只要你还在我心中",
      "song": "《记得》张惠妹"
    },
    {
      "lyric": "我留不住你，心却被你带走",
      "song": "《我爱他》丁当"
    },
    {
      "lyric": "爱你不是两三天，每天却想你很多遍",
      "song": "《野孩子》杨千嬅"
    },
    {
      "lyric": "我知道你都知道，却不说",
      "song": "《告白气球》周杰伦"
    },
    {
      "lyric": "就算世界与我为敌，我也要坚持到最后",
      "song": "《逆光》孙燕姿"
    },
    {
      "lyric": "很喜欢你，从南到北也喜欢你",
      "song": "《说爱你》蔡依林"
    },
    {
      "lyric": "孤单是一个人的狂欢，狂欢是一群人的孤单",
      "song": "《孤独患者》陈奕迅"
    },
    {
      "lyric": "再美好也经不住遗忘，再悲伤也抵不过时光",
      "song": "《身骑白马》徐佳莹"
    },
    {
      "lyric": "就算你留恋开放在水中娇艳的水仙",
      "song": "《花心》周华健"
    },
    {
      "lyric": "放弃你，放弃爱，放弃的梦被打碎",
      "song": "《至少还有你》林忆莲"
    },
    {
      "lyric": "远方的风景你说要一起去看",
      "song": "《就是爱你》陶喆"
    },
    {
      "lyric": "我只想用我这一辈子去爱你",
      "song": "《绝口不提爱你》郑中基"
    },
    {
      "lyric": "我怎么舍得你，伤心到黎明",
      "song": "《用心良苦》张宇"
    },
    {
      "lyric": "我要用心去爱，用心去感受你所有的存在",
      "song": "《最重要的决定》范玮琪"
    },
    {
      "lyric": "你在路上，总会有人陪你一起走",
      "song": "《后来》刘若英"
    },
    {
      "lyric": "可是我不懂，该怎么让你开心",
      "song": "《好久不见》陈奕迅"
    },
    {
      "lyric": "想飞奔向你，却被时光困住了双脚",
      "song": "《修炼爱情》林俊杰"
    },
    {
      "lyric": "没有泪光，没有遗憾，也就不会有我们现在的坚强",
      "song": "《他还是不懂》S.H.E"
    },
    {
      "lyric": "曾经在我眼前，却消失不见",
      "song": "《红蜻蜓》小虎队"
    },
    {
      "lyric": "阳光总在风雨后，请相信有彩虹",
      "song": "《阳光总在风雨后》许美静"
    },
    {
      "lyric": "最浪漫的事，就是和你一起慢慢变老",
      "song": "《最浪漫的事》赵咏华"
    },
    {
      "lyric": "风儿吹，吹得心儿好累",
      "song": "《欧若拉》张韶涵"
    },
    {
      "lyric": "你说把爱渐渐放下会走更远，还是走到终点",
      "song": "《安静》周杰伦（另一句）"
    },
    {
      "lyric": "让我们一起数数星星，一起低语我们的小秘密",
      "song": "《健康歌》范晓萱"
    },
    {
      "lyric": "回到最初的记忆，让我依然相信",
      "song": "《在梅边》王力宏"
    },
    {
      "lyric": "总有些惊奇的际遇，比方说当我遇见你",
      "song": "《给自己的歌》李宗盛"
    },
    {
      "lyric": "想起你，就甜蜜又伤心",
      "song": "《左边》杨丞琳"
    },
    {
      "lyric": "我是真的爱你，我不后悔爱上你",
      "song": "《想你的365天》李玟"
    },
    {
      "lyric": "你陪我走过的每一个春夏秋冬",
      "song": "《你不是真正的快乐》丁当翻唱"
    },
    {
      "lyric": "微笑的你，给我勇气让我坚定",
      "song": "《如果这就是爱情》张靓颖"
    },
    {
      "lyric": "我拿什么和你赌，拿什么和你做比较",
      "song": "《伤痕》林忆莲"
    },
    {
      "lyric": "我们都是好孩子，最最天真的孩子",
      "song": "《我们都是好孩子》王筝"
    },
    {
      "lyric": "我愿意为你，我愿意为你，被放逐天际",
      "song": "《我愿意》王菲"
    },
    {
      "lyric": "至少曾经疯狂过，至少回忆不会错",
      "song": "《同手同脚》温岚"
    },
    {
      "lyric": "分开以后就别再回头，你有你的天空",
      "song": "《不得不爱》潘玮柏"
    },
    {
      "lyric": "第一次爱的人，记忆会不会褪色",
      "song": "《第一次爱的人》王心凌"
    },
    {
      "lyric": "想飞却怎么也飞不高，是风不够大还是心太小",
      "song": "《素颜》许嵩"
    },
    {
      "lyric": "心痛比快乐更真实，爱为何那么讽刺",
      "song": "《真实》张惠妹"
    },
    {
      "lyric": "带你去看流星雨落在这地球上，让你的泪落在我肩膀",
      "song": "《流星雨》F4（更完整）"
    },
    {
      "lyric": "就算世界与我为敌，我也不想退缩",
      "song": "《轨迹》周杰伦"
    },
    {
      "lyric": "如果你愿意一层一层剥开我的心，悬着的泪滴会滑落",
      "song": "《洋葱》杨宗纬（长句）"
    },
    {
      "lyric": "当眼泪流下来，伤已超载",
      "song": "《流年》王菲"
    },
    {
      "lyric": "那些花儿，已随着青春一同远去",
      "song": "《那些花儿》朴树"
    },
    {
      "lyric": "我祈祷拥有一颗透明的心灵",
      "song": "《她说》林俊杰"
    },
    {
      "lyric": "在你离开之后的日子，如何拼凑回忆的碎屑",
      "song": "《怎样》戴佩妮"
    },
    {
      "lyric": "如果再次相遇，我想我会记得你",
      "song": "《爱爱爱》方大同"
    },
    {
      "lyric": "最怕空气突然安静，最怕朋友突然的关心",
      "song": "《突然好想你》五月天（周杰伦也曾演唱）"
    },
    {
      "lyric": "寂寞的夜和谁说话，想你到无法自拔",
      "song": "《一个人的精彩》萧亚轩"
    },
    {
      "lyric": "你问我爱你有多深，我爱你有几分",
      "song": "《月亮代表我的心》邓丽君"
    },
    {
      "lyric": "泪若能不流，要用什么来承受",
      "song": "《在树上唱歌》郭静"
    },
    {
      "lyric": "你说你会哭，不是因为在乎",
      "song": "《双截棍》周杰伦（柔情片段）"
    },
    {
      "lyric": "我在这里等着你回来，等着你回来看那桃花开",
      "song": "《故乡的云》费翔"
    },
    {
      "lyric": "窗外的雨还在下，你的心里有些牵挂吗",
      "song": "《雨天》孙燕姿"
    },
    {
      "lyric": "我想大声告诉你，你一直在我世界里",
      "song": "《爱转角》罗志祥"
    },
    {
      "lyric": "离开你以后，我才发现自己那爱笑的眼睛",
      "song": "《爱笑的眼睛》徐若瑄"
    },
    {
      "lyric": "如果还有明天，你想怎样装扮你的脸",
      "song": "《如果还有明天》信乐团"
    },
    {
      "lyric": "走在冷风中，我的心也被冻住",
      "song": "《分手快乐》梁静茹"
    },
    {
      "lyric": "一生热爱难回头，灿烂也许一瞬间",
      "song": "《光辉岁月》Beyond"
    },
    {
      "lyric": "我想要怒放的生命，像飞翔在辽阔天空",
      "song": "《怒放的生命》汪峰"
    },
    {
      "lyric": "当阳光再次离开，你却不再为我等待",
      "song": "《突然想爱你》动力火车"
    },
    {
      "lyric": "你是火焰我是灰烬，相遇却无法相拥",
      "song": "《灰姑娘》郑钧"
    },
    {
      "lyric": "是不是我太过执迷，不懂得放手的道理",
      "song": "《白月光》张信哲"
    },
    {
      "lyric": "我没说谎，我何必说谎，懂我在忧伤",
      "song": "《说谎》林宥嘉"
    },
    {
      "lyric": "你的背包让我走得好缓慢，明天我要离开",
      "song": "《你的背包》陈奕迅"
    },
    {
      "lyric": "我想用沉默代替所有回答，你能否懂我的无暇",
      "song": "《寂寞的季节》陶喆"
    },
    {
      "lyric": "我时常在想，你会不会也在同个地点张望",
      "song": "《好想好想》古巨基"
    },
    {
      "lyric": "时间请你帮帮我，把所有回忆都清空",
      "song": "《时间煮雨》郁可唯"
    },
    {
      "lyric": "看着你远走的背影，我知道我留不住曾经",
      "song": "《你那么爱他》李圣杰"
    },
    {
      "lyric": "爱我的话你都说，爱我的事你不做",
      "song": "《爱不得》丁当"
    },
    {
      "lyric": "遇见你的那一天，繁花盛开在心间",
      "song": "《遇见》孙燕姿"
    },
    {
      "lyric": "城市霓虹，挡不住心里的一抹朦胧",
      "song": "《夜太黑》林忆莲"
    },
    {
      "lyric": "我哭到哽咽心还痛，风干后悲伤终成空",
      "song": "《别找我麻烦》莫文蔚"
    },
    {
      "lyric": "你说你喜欢雨，可你撑伞不肯淋湿",
      "song": "《眼泪》范晓萱"
    },
    {
      "lyric": "我在你的生命里只是过客，留不下什么",
      "song": "《一个像夏天一个像秋天》范玮琪"
    },
    {
      "lyric": "追不到的那个人，像风一样抓不住",
      "song": "《追》张国荣"
    },
    {
      "lyric": "我发现你有一点点心动，却不愿点破所有感动",
      "song": "《预感》萧亚轩"
    },
    {
      "lyric": "爱要越挫越勇，爱要肯定执着",
      "song": "《爱要坦荡荡》萧萧"
    },
    {
      "lyric": "你笑得像光芒，暖暖地照在我心上",
      "song": "《暖暖》梁静茹"
    },
    {
      "lyric": "那颗心动的信号，从未停止对你奔跑",
      "song": "《心动》王菲"
    },
    {
      "lyric": "当思念变成一种习惯，彼此就再无隐藏",
      "song": "《如果爱下去》张靓颖"
    },
    {
      "lyric": "你留在我心里的梦，像裂缝一样拉扯痛",
      "song": "《可惜不是你》梁静茹"
    },
    {
      "lyric": "如果这就是爱，我愿意背负所有悲哀",
      "song": "《如果这就是爱》张靓颖"
    },
    {
      "lyric": "我还记得那天的微风，吹散你的笑容",
      "song": "《安静了》A-Lin"
    },
    {
      "lyric": "你说我们要一直幸福，却总是不知道满足",
      "song": "《半岛铁盒》周杰伦"
    },
